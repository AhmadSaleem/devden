<header id="home">
  <!-- Background Image -->
  <div class="bg-img img-back1">
    <div class="overlay"></div>
  </div>
  <!-- /Background Image -->

  <!-- home wrapper -->
  <div class="home-wrapper">
    <h2>Hire Remote Teams for Startups</h2>
    <div class="container">
      <div class="row">

        <!-- home content -->
        <div class="col-md-10 col-md-offset-1">
          <div class="home-content">
            <div class="form-content">
              <form class="">
                <div class="row">
                  <div class="col-md-8 email-div">
                    <input type="email" autocomplete="email" placeholder="Email" class="email-field">
                  </div>
                  <div class="col-md-4 btn-div">
                    <button class="main-btn send-message">Get Started</button>
                  </div>
                </div>
              </form>
            </div>
            <div id="error" class="hide"></div>
          </div>
        </div>
        <!-- /home content -->

      </div>
    </div>
  </div>
  <!-- /home wrapper -->
</header>

<div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
  <%= form_for @enquiry, url: enquiries_path, remote: true, html: { class: "enquiry-form" } do |f| %>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <p class="modal-title" id="myModalLabel">Hire a Team!</p>
          <p class="modal-subtitle">We'd love to know about your project and needs in detail</p>
        </div>

        <div class="modal-body">
          <div class="row">
            <div class="col-md-12 section-title">
              <p>About Your Project</p>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <%= f.label "Title" %><br />
              <%= f.text_field :project_title, class: "input", required: true %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <%= f.label "Description" %><br />
              <%= f.text_area :project_description, class: "input", required: true %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12 section-title">
              <p>Project Requirments</p>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12 modal-fields">
              <%= f.label "What do you want to create?" %><br />
              <% Enquiry.project_types.each do |key, value| %>
                <%= f.label value, value: key, class: "project_type", id: "#{key}" %>
              <% end %>
            </div>
          </div>

          <%= f.hidden_field :project_type, value: "" %>
          <%= f.hidden_field :service_required, value: "" %>

          <div class="row">
            <div class="col-md-12 modal-fields">
              <%= f.label "Services Required?" %><br />
              <% Enquiry.service_requireds.each do |key, value| %>
                <%= f.label value, value: key, class: "services_type", id: "#{key}" %>
              <% end %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12 section-title">
              <p>Your Information</p>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <%= f.label "Your Email" %><br />
              <%= f.email_field :email, class: "input", id: "user_email", placeholder: "Email", required: true %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <%= f.label "Your Name" %><br />
              <%= f.text_field :name, class: "input", placeholder: "", required: true %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <%= f.label :phone_number %><br />
              <%= f.text_field :phone_number, class: "input", placeholder: "", required: true %>
            </div>
          </div>

          <div class="send-button-div">
            <%= f.submit "Submit Details", class: "btn send-button" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= render "services" %>
<%= render "portfolio" %>
<div id="contact-form" >
  <%= render "contact" %>
</div>
